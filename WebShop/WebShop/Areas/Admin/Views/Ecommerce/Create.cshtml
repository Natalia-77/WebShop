@model WebShop.Areas.Admin.Models.AddUserByAdminModel

@using WebShop.Domain.Entities.Identity


@{
    ViewData["Title"] = "Додати нового користувача";
}


<div class="row">
    <div class="col-md-6 offset-md-3 ">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label "asp-area="admin" ></label>
        <input asp-for="Email" class="form-control" asp-area="admin"/>
        <span asp-validation-for="Email" class="text-danger "></span>              
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"asp-area="admin"></label>
        <input asp-for="Password" class="form-control" asp-area="admin"/>
        <span asp-validation-for="Password" class="text-danger"></span>               
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"asp-area="admin" ></label>                    
                <div>
                    <img id="profilePicture" style="width:150px;height:150px; object-fit:cover">
                </div>
                <input asp-for="Image" type="file" 
                       class="form-control"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])">               
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" formmethod="post"  />
            </div>
        </form>
    </div>

</div>

