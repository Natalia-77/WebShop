
@model IEnumerable<CatVM>

@{
    ViewData["Title"] = "Список котів";

}
@section Styles {
    <style>
         th {
            text-align: center;
         }
        img {
            width:150px;
        }
       
    </style>
}

<h1>Список котів для продажу</h1>
<a asp-action="Create" class="btn btn-success">Додати</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Кличка кота</th>
            <th scope="col">Дата народження</th>
            <th scope="col">Ціна</th>
            <th scope="col">Фото</th>
            <th scope="col">Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td class="text-center">@item.Name</td>
                <td class="text-center">@item.Birthday.ToLongDateString()</td>
                <td class="text-center" >@item.Price</td>
                <td>
                    <img src="@item.Image"
                         class="ml-lg-5",
                         alt="img"/>
                </td>
               @* <td>@item.Image</td>*@
                <td style="text-align:center">
                    <a class="text-success" asp-controller="Cats" asp-action="Edit" asp-route-id="@item.Id">Змінити</a>
                &nbsp;&nbsp;&nbsp;
                <a class="text-danger " asp-controller="Cats" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>

            </tr>
         }

    </tbody>
</table>
